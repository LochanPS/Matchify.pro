# ============================================
# MATCHIFY BACKEND ENVIRONMENT VARIABLES
# ============================================

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database Configuration (Railway PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Razorpay Configuration (Day 12-13)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Cloudinary Configuration (Day 14-15)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (Day 16-17)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Configuration (Day 18-19) - Optional
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=MATCHIFY

# Admin Configuration
ADMIN_EMAIL=admin@matchify.com
ADMIN_PASSWORD=admin123

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100